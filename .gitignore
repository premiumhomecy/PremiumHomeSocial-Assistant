# --- Celery ---
celerybeat-schedule
celerybeat.pid

# --- SageMath ---
*.sage.py

# --- Spyder ---
.spyderproject
.spyproject

# --- Rope ---
.ropeproject

# --- mkdocs ---
/site

# --- Mypy ---
.mypy_cache/
.dmypy.json
dmypy.json

# --- Pyre ---
.pyre/

# --- Pytype ---
.pytype/

